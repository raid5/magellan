<h1>Authentication - <%= @auth.name %></h1>

<p>Method: <%= @auth.auth_method %></p>

<p>
  <% if @auth.auth_method == Authentication::METHODS[:basic] %>
    u: <%= @auth.username %>, p: <%= @auth.password %>
  <% else %>
    token: <%= @auth.oauth_token %>
  <% end %>
</p>

<p>
  <%= link_to "Authentications", authentications_path %>
  |
  <%= link_to "Edit", edit_authentication_path(@auth) %>
</p>