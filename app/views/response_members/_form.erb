<%= form_for([@parameter_set, @response_member]) do |f| %>
  <%= render "shared/error_messages", :target => @response_member %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>    
  </div>
  <div class="field">
    <%= f.label :example %><br />
    <%= f.text_field :example %>    
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>    
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>