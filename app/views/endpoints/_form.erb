<%= form_for([@group, @endpoint]) do |f| %>
  <%= render "shared/error_messages", :target => @endpoint %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>    
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>    
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>